{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "company": {"type": "string"},
    "recommendation": {"type": "string", "enum": ["PURSUE", "PASS"]},
    "composite_score": {"type": "number"},
    "executive_summary": {"type": "string"},
    "criteria_match": {
      "type": "object",
      "properties": {
        "arr_in_range": {"type": "boolean"},
        "growth_rate": {"type": "boolean"},
        "sde_achievable": {"type": "boolean"},
        "product_led": {"type": "boolean"},
        "smb_focus": {"type": "boolean"},
        "score": {"type": "integer"}
      }
    },
    "risk_flags": {
      "type": "object",
      "properties": {
        "critical": {"type": "array"},
        "high": {"type": "array"},
        "medium": {"type": "array"}
      }
    },
    "growth_opportunities": {
      "type": "object",
      "properties": {
        "real": {"type": "array"},
        "pie_in_sky": {"type": "array"}
      }
    }
  }
}
